environment_id="ree-1.8.7-2010.02"
application_name="sinatrabase"

if [[ -d "${rvm_path:-$HOME/.rvm}/environments" \
  && -s "${rvm_path:-$HOME/.rvm}/environments/$environment_id@$application_name" ]] ; then
  . "${rvm_path:-$HOME/.rvm}/environments/$environment_id@$application_name"
else
  rvm --create use  "$environment_id@$application_name"
fi

[[ -s "$application_name.gems" ]] && rvm gemset import $application_name.gems
